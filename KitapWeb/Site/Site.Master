        </div>
    </div>

    <div class="icons">
        <i class="fas fa-lock"></i>
        <div class="content">
            <h3>Güvenli Ödeme</h3>
            <p>50 Tl ye Kadar</p>
        </div>
    </div>

    <div class="icons">
        <i class="fas fa-redo-alt"></i>
        <div class="content">
            <h3>Kolay İade</h3>
            <p>7 Gün İçerisinde</p>
        </div>
    </div>

    <div class="icons">
        <i class="fas fa-headset"></i>
        <div class="content">
            <h3>24/7 Destek</h3>
            <p>Ne Zaman Ararsan</p>
        </div>
    </div>

</section>

<!-- icons section ends -->

<!-- featured section starts  -->


<section class="featured" id="featured">

    <h1 class="heading"> <span>Kitaplar</span> </h1>

    <div class="swiper featured-slider">

        <div class="swiper-wrapper">
            
                <asp:ContentPlaceHolder ID="Books" runat="server">
                </asp:ContentPlaceHolder>
        </div>

        <div class="swiper-button-next"></div>
        <div class="swiper-button-prev"></div>

    </div>

</section>

<!-- featured section ends -->

<!-- newsletter section starts -->

<!-- newsletter section ends -->

<!-- deal section starts  -->

<!-- deal section ends -->

<!-- reviews section starts  -->

<section class="reviews" id="reviews">

    <h1 class="heading"> <span>Yorumlar</span> </h1>

    <div class="swiper reviews-slider">

        <div class="swiper-wrapper">

            <div class="swiper-slide box">
                <img src="/image/pic-7.jpg" alt="">
                <h3>Ismet Oğulcan Yılmaz</h3>
                <p>Bütün Umidim Gençliktedir. #Mustafa Kemal ATATÜRK</p>
                <div class="stars">
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                </div>
            </div>

        </div>

    </div>
    
</section>

<!-- reviews section ends -->

